@using Aurora_Project.Models.Orders;
@model OrderDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container my-4 py-4">
    <h1>Odrer Details:</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Order #@Html.DisplayNameFor(model => model.Id):
            </dt>
            <dd class="col-sm-10">
                #@Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderDate):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderStatus):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderStatus)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShippingAddress):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShippingAddress) 
            </dd>
            <dt class="col-sm-2">
                Customer:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.FullName) <a class="text-info mx-2" asp-controller="Customers" asp-action="Details" asp-route-id="@Model.CustomerId"><i class="fa-solid fa-circle-info"></i></a>
            </dd>
        </dl>
    </div>
    <hr />
    <div>
        <h3>Bikes Ordered:</h3>
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Bike #Id</th>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Bike Type</th>
                    <th>Year</th>
                    <th>Color</th>
                    <th>Price</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var bike in Model.Bikes)
                {
                    <tr>
                        <td>
                            #@bike.Id
                        </td>
                        <td>
                            @bike.Brand
                        </td>
                        <td>
                            @bike.Model
                        </td>
                        <td>
                            @bike.BikeType.Type
                        </td>
                        <td>
                            @bike.Year
                        </td>
                        <td>
                            @bike.Color
                        </td>
                        <td>
                            @bike.Price.ToString("c")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <hr />
    <div>
        <a class="btn btn-secondary" asp-action="Index">Back</a>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    </div>
</div>
