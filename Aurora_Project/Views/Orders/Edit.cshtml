@using Aurora_Project.Models.Orders;
@using Aurora_Project.Enums;
@model OrderCreateUpdateViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-4 py-4">
    <h1>Edit Order: <span class="text-primary">#@Model.Id</span></h1>
    <hr />
    <h4>Order:</h4>
    <hr />

    <form asp-action="Edit">
        <div class="row">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="OrderDate" class="control-label"></label>
                    <input asp-for="OrderDate" class="form-control" />
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrderStatus" class="control-label"></label>
                    <select asp-for="OrderStatus" asp-items="@Html.GetEnumSelectList<OrderStatus>()" class="form-control">
                        <option value="">---Select Order Status---</option>
                    </select>
                    <span asp-validation-for="OrderStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShippingAddress" class="control-label"></label>
                    <input asp-for="ShippingAddress" class="form-control" />
                    <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CustomerId" class="control-label"></label>
                    <select asp-for="CustomerId" asp-items="Model.CustomersSelectList" class="form-control">
                        <option>--Select Customer--</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="BikeIds" class="control-label"></label>
                    <select asp-for="BikeIds" asp-items="Model.BikesMultiselectList" class="form-control select2"></select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group mt-4">
                    <a class="btn btn-secondary" asp-action="Index">Back</a>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}