@using Aurora_Project.Models.BikeTypes;
@model IEnumerable<BikeTypeListViewModel>

@{
    ViewData["Title"] = "BikeTypes";
}

<div class="container my-5">
    <h1>Bike Types</h1>

    <hr />

    <div>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </div>

    <hr />

    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bikeType in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => bikeType.Type)
                    </td>
                    <td>
                        <a class="text-primary" asp-action="Edit" asp-route-id="@bikeType.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a class="text-info mx-2" asp-action="Details" asp-route-id="@bikeType.Id"><i class="fa-solid fa-circle-info"></i></a>
                        <a class="text-danger" asp-action="Delete" asp-route-id="@bikeType.Id" data-bs-toggle="modal" data-bs-target="#deleteModal_@bikeType.Id">
                            <i class="fa-solid fa-trash"></i>
                        </a>


                        <!-- Modal -->
                        <div class="modal fade text-black" id="deleteModal_@bikeType.Id" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">

                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Delete @bikeType.Type</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this bike type: <span class="text-danger">@bikeType.Type</span>?
                                    </div>
                                    <div class="modal-footer">
                                        <form asp-action="Delete" class="mt-3">
                                            <input type="hidden" name="Id" value="@bikeType.Id" />
                                            <a class="btn btn-secondary" data-bs-dismiss="modal">Cancel</a>
                                            <input type="submit" value="Delete" class="btn btn-danger ms-1" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
