@using Aurora_Project.Models.BikeTypes;
@model IEnumerable<BikeTypeIndexViewModel>

@{
    ViewData["Title"] = "BikeTypes";
}

<div class="container my-5">
    <h1>Bike Types</h1>

    <hr />

    <div>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </div>

    <hr />

    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a class="text-info mx-2" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a>
                        <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
